{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -qE '\\.(ts|tsx|js|jsx|json|md|css|html|yml|yaml)$'; then npx prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "python-development@claude-code-workflows": true,
    "javascript-typescript@claude-code-workflows": true,
    "cloud-infrastructure@claude-code-workflows": true,
    "security-scanning@claude-code-workflows": true,
    "code-review-ai@claude-code-workflows": true
  }
}
