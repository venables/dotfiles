# ~/.zimrc
# zim module configuration

# core settings
zmodule environment  # sets sane zsh options
zmodule input        # better line editor key bindings
zmodule termtitle    # sets terminal window title
zmodule utility      # ls colors and aliases

# modules
zmodule exa         # https://github.com/zimfw/exa
zmodule git         # https://github.com/zimfw/git
zmodule fzf         # https://github.com/zimfw/fzf
zmodule https://github.com/agkozak/zsh-z

# prompt - pure prompt
zmodule sindresorhus/pure --source async.zsh --source pure.zsh

# completion enhancements
zmodule zsh-users/zsh-completions --fpath src
zmodule completion

# fish-like features
zmodule zsh-users/zsh-syntax-highlighting
zmodule zsh-users/zsh-history-substring-search
zmodule zsh-users/zsh-autosuggestions
