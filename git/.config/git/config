[core]
  editor = nvim
  excludesfile = ~/.config/git/ignore
  quotepath = false

[color]
  ui = true

[commit]
  gpgsign = true

[credential]
  helper = osxkeychain

[diff]
  algorithm = histogram

[gpg]
  program = gpg

[init]
  defaultBranch = main

[interactive]
  diffFilter = riff --color=on

[pager]
  diff = riff
  show = riff
  log = riff

[merge]
  conflictstyle = zdiff3

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  default = current

[rerere]
  enabled = true

[user]
  name = Matt Venables
  email = matt@venabl.es
  signingkey = EC6E08B3EB204284

[alias]
  a = add
  b = branch
  c = commit
  co = checkout
  cob = checkout -b
  d = diff
  fap = fetch --all --prune
  fop = fetch origin --prune
  l = log --graph --decorate --pretty=oneline --abbrev-commit
  la = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ll = !git --no-pager l
  lla = !git --no-pager la
  p = push
  s = status
  r = rebase
  w = worktree
  wl = worktree list
  wa = "!f() { git worktree add -b \"$1\" \"../$(basename \"$PWD\")-$1\"; }; f"
  wr = "!f() { git worktree remove \"../$(basename \"$PWD\")-$1\"; }; f"
  # get the latest `main` branch in sync
  sync = "!f() { BRANCH=${1:-main}; git checkout $BRANCH && git fetch --all --prune && git pull; }; f"
  # Clean branches, including squash-and-merged
  # From https://github.com/not-an-aardvark/git-delete-squashed
  cleanup = "!f() { local targetBranch=${1:-main} && git checkout -q $targetBranch && git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d && git for-each-ref refs/heads/ \"--format=%(refname:short)\" | while read branch; do [ \"$branch\" = \"$targetBranch\" ] && continue; [ \"$(git rev-list --count $targetBranch..$branch)\" = \"0\" ] && git branch -D $branch && continue; mergeBase=$(git merge-base $targetBranch $branch) && [[ $(git cherry $targetBranch $(git commit-tree $(git rev-parse $branch\\^{tree}) -p $mergeBase -m _)) == \"-\"* ]] && git branch -D $branch; done; }; f"
  # Claude Code and Opencode commit messages
  claude = "!f() { msg=$(claude -p \"$(cat ~/.config/git/commit-prompt.txt)\"); git commit -m \"$msg\"; }; f"
  oc = "!f() { msg=$(opencode -p \"$(cat ~/.config/git/commit-prompt.txt)\"); git commit -m \"$msg\"; }; f"
  # GH CLI
  poi = "!gh poi"
  pr = "!gh pr"
  dash = "!gh dash"

[includeIf "gitdir:~/dev/catena/"]
  path = ~/.config/git/config-catena
