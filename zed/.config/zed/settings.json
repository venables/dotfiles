{
  "$schema": "zed://schemas/settings",

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Theme
  "theme": "One Dark",
  "icon_theme": "Zed (Default)",

  // Editor
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "relative_line_numbers": "enabled",

  // Extensions
  "auto_install_extensions": {
    "astro": true,
    "dockerfile": true,
    "html": true,
    "git-firefly": true,
    "make": true,
    "rainbow-csv": true,
    "ruff": true,
    "sql": true,
    "terraform": true,
    "toml": true
  },

  // AI
  "agent": {
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-latest"
    }
  },
  "agent_servers": {
    "OpenCode": {
      "type": "custom",
      "command": "opencode",
      "args": ["acp"]
    }
  }
}
